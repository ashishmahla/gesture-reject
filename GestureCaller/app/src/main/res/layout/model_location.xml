<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ml_x001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/cb_ml_enabled"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ml_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:text="Workplace"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ml_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(45.484820,23.293801)"
                android:textColor="#999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ml_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Hey I am in office. Talk to you later."
                android:textColor="#555"
                android:textSize="14sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_ml_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_ml_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/ml_x001"
            android:text="40 kms"
            android:textColor="#666"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>